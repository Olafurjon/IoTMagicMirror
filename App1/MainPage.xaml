        </StackPanel>
        <TextBlock x:Name="tbl_status" HorizontalAlignment="Left" Margin="10,500,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" SelectionChanged="tbl_timenow_SelectionChanged" Foreground="White" FontSize="40" Height="359" Width="1836"/>
