        <TextBlock x:Name="tbl_status" HorizontalAlignment="Left" Margin="52,820,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" SelectionChanged="tbl_timenow_SelectionChanged" Foreground="White" FontSize="40" Height="113" Width="543"/>
