        <TextBlock x:Name="tbl_dateNow" HorizontalAlignment="Center" Margin="433,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="tbl_timenow_SelectionChanged" Foreground="White" FontSize="40" Width="207" Height="75" Text="xx/xx/xxxx" RenderTransformOrigin="0.57,0.469"/>
        <TextBlock x:Name="tbl_pun" Margin="78,350,83,259" TextWrapping="Wrap" Text="" VerticalAlignment="Center" SelectionChanged="tbl_timenow_SelectionChanged" Foreground="White" FontSize="40" Height="415" Width="479" HorizontalAlignment="Center"/>



